{% extends "default/admin/layout.html.twig" %}
{% block body %}
    <h1>Musicgames</h1>
    <div class="col-11 mb-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="col-11 mb-3">
        <a href="{{ path ('admin_musicgame_create') }}" class="btn btn-sm btn-secondary">Register new musicgame</a>
    </div>
        <div class="col-6">
        {% for game in musicgames %}
            <div class="col-11 mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/images/musicgame-default.png" class="img-fluid rounded-start" alt="musicgame">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><a href="{{ path ('admin_musicgame_game_dashboard', { slug: game.slug }) }}">{{ game.name }}</a></h5>
                                <p class="card-text">{{ game.description }}</p>
                            </div>
                            <div class="m-3 pb-0">
                            <form action="{{ path ('admin_musicgame_delete', { id:game.id }) }}" method="post">
                                <button type="submit" class="btn btn-sm btn-secondary">Supprimer</button>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
