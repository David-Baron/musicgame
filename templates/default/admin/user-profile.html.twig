{% extends "default/admin/layout.html.twig" %}
{% block body %}
    <h1>Mon profil</h1>
<div class="col-6">
    <div class="alert alert-info">
        <div class="mb-3 row">
            <strong>Contact</strong>
        </div>
        {{ form_start(profileForm) }}
            <div class="mb-3 row">
                <label for="profile_username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    {{ form_widget(profileForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="mb-3 row">
                <label for="profile_email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    {{ form_widget(profileForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-secondary" value="Save">
            </div>
        {{ form_end(profileForm) }}
    </div>
</div>
<div class="col-6">
    <div class="alert alert-warning">
        <div class="mb-3 row">
            <strong>Change password</strong>
        </div>
        {{ form_start(changePasswordForm) }}
                <div class="mb-3 row">
                <label for="change_password_actual_password" class="col-sm-2 col-form-label">Actual</label>
                <div class="col-sm-10">
                    {{ form_widget(changePasswordForm.actualPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
                <div class="mb-3 row">
                <label for="change_password_new_password" class="col-sm-2 col-form-label">New</label>
                <div class="col-sm-10">
                    {{ form_widget(changePasswordForm.newPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-secondary" value="Save">
            </div>
        {{ form_end(changePasswordForm) }}
    </div>
</div>
{% endblock %}